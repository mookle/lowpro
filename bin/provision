#!/bin/bash

tags=""
extra_vars=""

for arg in "$@"
do
    case $arg in
        -t|--tags)
            if [[ -z $tags ]]; then
                tags="$2"
            else 
                tags="$tags,$2"
            fi
            shift 2
            ;;
        -e|--extra_vars)
            if [[ -z $extra_vars ]]; then
                extra_vars="$2"
            else
                extra_vars="$extra_vars $2"
            fi
            shift 2
            ;;
        -*)
            echo "Aborting: Unsupported arg \"$arg\""
            exit 1
            ;;
    esac
done

if [[ ! -z $tags ]]; then
    tags="--tags \"$tags\""
fi

if [[ ! -z $extra_vars ]]; then
    extra_vars="--extra_vars \"$extra_vars\""
fi

ansible-playbook -i hosts.yml -e @config.yml playbooks/all.yml --ask-become-pass $tags $extra_vars
